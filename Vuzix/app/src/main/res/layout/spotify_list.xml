<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:clickable="true"
    android:background="?android:attr/selectableItemBackground"
    android:onClick="playSongFromList">

    <TextView
        android:id="@+id/spotify_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:padding="8dp"
        android:layout_gravity="right"/>

    <TextView
        android:id="@+id/spotify_track_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="#888888"
        android:padding="8dp"
        android:layout_gravity="right" />

    <Button
        android:id="@+id/spotify_track_controls_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:padding="0dp"
        android:layout_margin="2dp"
        android:backgroundTint="?android:attr/selectableItemBackground"
        android:drawableEnd="@drawable/ic_music_note"
        android:layout_gravity="end"
        android:onClick="showSpotifySongActivity"/>

</LinearLayout>
